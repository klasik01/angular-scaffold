# EditorConfig: http://EditorConfig.org

root = true

# For every file
[*.{html,js,json,scss,css}]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.ts]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
spaces_around_brackets = inside
trim_trailing_whitespace = true
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
