{
  "extends": "stylelint-config-standard",
  "defaultSeverity": "warning",
  "rules": {
    "at-rule-no-unknown": [
      null,
      {
        "ignoreAtRules": [
          "if",
          "else",
          "each",
          "for",
          "function",
          "return",
          "mixin",
          "include"
        ]
      }
    ],
    "at-rule-empty-line-before": [
      null,
      {
        "ignoreAtRules": [
          "else"
        ]
      }
    ],
    "function-name-case": null,
    "block-closing-brace-newline-after": [
      null,
      {
        "ignoreAtRules": [
          "if"
        ]
      }
    ]
  }
}
